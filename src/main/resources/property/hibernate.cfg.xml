<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/cbk</property>
        <property name="connection_pool_size">1</property>
        <property name="hbm2ddl.auto">create</property>
        <property name="show_sql">true</property>
        <mapping class="org.example.models.json.Amount"/>
        <mapping class="org.example.models.json.ConversionRate"/>
        <mapping class="org.example.models.json.Entry"/>
        <mapping class="org.example.models.json.EntryType"/>
        <mapping class="org.example.models.json.JsomModel"/>
        <mapping class="org.example.models.json.Participant"/>
        <mapping class="org.example.models.json.Participant"/>
        <mapping class="org.example.models.json.Transfer"/>
        <mapping class="org.example.models.xls.XLSModel"/>

    </session-factory>
</hibernate-configuration>